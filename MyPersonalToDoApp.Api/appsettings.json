{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MyAppTodo;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AuthJwt": {
    "ValidAudience": "https://localhost:44363",
    "ValidIssuer": "https://localhost:44363",
    "Secret": "",
    "ExpirationInMinute": "60"
  },
  "Identity": {
    "User": {
      "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@",
      "RequireUniqueEmail": "true"
    },
    "Lockout": {
      "MaxFailedAccessAttempts": "3",
      "DefaultLockoutTimeSpan": "30" // Minutes
    }
  }
}
